{% include "header.html.twig" %}

<title> Login </title>

{% include "styles.html.twig" %}

<script type="text/javascript" src="./templates/js/manejoSesiones.js"></script>
</head>

{% include "navBar.html.twig" %}

<div class="container-fluid">
	<div class="row alMedio">
  		<div class="col-sm-4"></div>
  		<div class="col-sm-4">
  			<h2> <p class="text-center">Iniciar sesión </p></h2> 
  			<div class="alMedio">
  				{% if datos is defined %} 
  					<p class="text-danger">{{ datos.mensaje }}  </p>
  				{% endif %}
  				<p id="campo_error" class="text-danger"> </p>
				<form name="login" method="POST" action="./?action=inicioSesion" onsubmit="return validarLogin()">
			  		<div class="form-group">
			    		<label for="name">Nombre de usuario</label>
			    		<input name="nombre" type="text" class="form-control" required>
	  				</div>
	  				<div class="form-group">
	    			<label for="pwd">Contraseña</label>
	    			<input name="contra" type="password" class="form-control" required>
	  				</div>
	  				<button type="submit" class="btn btn-primary text-white">Entrar</button>
				</form> 
			</div>
		</div>
  		<div class="col-sm-4"></div>
	</div> 
</div>

{% include "footer.html.twig" %}