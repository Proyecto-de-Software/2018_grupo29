<div class="row container-fluid alMedio">
	<div class="col-sm-3"></div>
	<div class="col-sm-6 text-center">
		<h2 class="text-center">{{datos.titulo}}</h2>
	</div>
	<div class="col-sm-3"></div>
</div>

<div class="row container-fluid alMedio">
	<div class="col-sm-4"></div>
	<div class="col-sm-4 text-center">
		<button class="btn btn-secondary" id="boton">Ocultar gr√°fico</button>
	</div>
	<div class="col-sm-4"></div>
</div>
<br>
<div id="chart">
	<div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
</div>

<br>
<div class="row container-fluid">
	<div class="col-sm-4"></div>
	<div class="col-sm-4 text-center">
		<button class="btn btn-secondary" id="botonlistado">Ocultar listado</button>
	</div>
	<div class="col-sm-4"></div>
</div>

<div id="listado">
	<a href="javascript:pruebaDivAPdf()" class="btn btn-info">Exportar listado a PDF</a> <br><br>
	{% for t in datos.todo %}
		{% if t is not empty %}
    		<h3>{{t[0].forma}} </h3>
    		<ul class="list-group">
			{% for c in t %}		
				<li class="list-group-item list-group-item-action">
					Paciente: {{c.nombre_paciente}} {{c.apellido}} <br>
					Fecha: {{c.fecha}} <br>
					Diagnostico: {{c.diagnostico}}
				</li> 	
			{% endfor %}
			</ul>			
		{% endif %}		
	{% endfor %}
</div>