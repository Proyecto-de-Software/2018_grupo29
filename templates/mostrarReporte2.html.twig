{% include 'home.html.twig' %}
<body onload="dibujar({{datos.data}})">
<div id="chartContainer" style="height: 300px; width: 100%;"></div>
<button id="exportButton" type="button">Export as PDF</button>
<div id="listado">
	{% for t in datos.todo %}
		{% if t is not empty %}
    		<h3>{{t[0].forma}} </h3>
    		<ul id={{t[0].forma}} class="list-group">
			{% for c in t %}		
				<li id={{c.id}} class="list-group-item list-group-item-action">
					Paciente: {{c.nombre_paciente}} {{c.apellido}} <br>
					Fecha: {{c.fecha}} <br>
					Diagnostico: {{c.diagnostico}}
				</li> 	
			{% endfor %}
			</ul>			
		{% endif %}		
	{% endfor %}
</div>
<script type="text/javascript" src="./templates/js/jquery.js"></script>
<script type="text/javascript" src="./templates/js/logicaGraficos.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.4.1/jspdf.debug.js" integrity="sha384-THVO/sM0mFD9h7dfSndI6TS0PgAGavwKvB5hAxRRvc0o9cPLohB0wb/PTA7LdUHs" crossorigin="anonymous"></script>
<script src="https://unpkg.com/jspdf@latest/dist/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
