{% include "home.html.twig" %}
<script type="text/javascript" src="./templates/js/jquery.js"></script>
<script type="text/javascript" src="./templates/js/ajaxParaConsulta.js"></script>
<script type="text/javascript" src="./templates/js/validacionesConsulta.js"></script>
<br>
<div class="row container-fluid">
	<div class="col-sm-2"><a class="nav-link btn btn-primary text-white" href="./index.php?action=mostrarFormularioConsulta">Volver</a></div>
	<div class="col-sm-10"></div>
</div>
<h2 class="alMedio text-center">Detalle de consulta</h2>
<br>
<div class="row container-fluid">
	<div class="col-sm-3"></div>
	<div class="col-sm-3 text-center">
		<form method="POST" action="./index.php?action=editConsulta">
			<input type="hidden" name="id_consulta" value="{{datos.consulta[0].id}}">
			<input type="submit" name="Editar" value="Editar" class="btn btn-warning">
		</form>
	</div>
	<div class="col-sm-3 text-center">
		<form  onsubmit="return confirmacionEliminacion()"  method="POST" action="./index.php?action=deleteConsulta">
			<input type="hidden" name="id_consulta" value="{{datos.consulta[0].id}}">
			<input type="submit" name="Eliminar" value="Eliminar" class="btn btn-danger">
		</form>
	</div>
	<div class="col-sm-3"></div>
</div>
<br>
<div class="row container-fluid">
	<div class="col-sm-3"></div>
	<div class="col-sm-6">
		<ul class="list-group">
			{% for c in datos.consulta %}
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">Fecha</div>
					<div class="col-sm-6 text-center">{{c.fecha}}</div>
				</div>
			</li>
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">Paciente</div>
					<div class="col-sm-6 text-center">{{c.nombre_paciente}} {{c.apellido}}</div>
				</div>
			</li>
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">Motivo</div>
					<div class="col-sm-6 text-center">{{c.nombre}}</div>
				</div>
			</li>
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">¿Hubo internación?</div>
					<div class="col-sm-6 text-center">{% if c.internacion == 1 %} Sí {% else %} No {% endif %}</div>
				</div>
			</li> 
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">Diagnóstico</div>
					<div class="col-sm-6 text-center">{{c.diagnostico}}</div>
				</div>
			</li>
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">Observaciones</div>
					<div class="col-sm-6 text-center">{{c.observaciones}}</div>
				</div>
			</li>
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">Acompañamiento</div>
					<div class="col-sm-6 text-center">{{c.nombre_acompanamiento}}</div>
				</div>
			</li>
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">Tratamiento farmacológico</div>
					<div class="col-sm-6 text-center">{{c.nombre_tratamiento}}</div>
				</div>
			</li>
			<li class="list-group-item list-group-item-action">
				<div class="row container-fluid">
					<div class="col-sm-6 text-center text-info">Articulacion con otras instituciones</div>
					<div class="col-sm-6 text-center">{{c.articulacion_con_instituciones}}</div>
				</div>
			</li>
			{% endfor %}
		</ul>
	</div>
	<div class="col-sm-3"></div>
</div>