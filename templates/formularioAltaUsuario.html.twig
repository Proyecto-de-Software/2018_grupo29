			{% if datos.mensaje is defined %}
				<p id="campo_error" class="{{datos.tipo_mensaje}}"> {{ datos.mensaje }}</p>
			{% endif %}
			<form name="formularioAltaUsuario" method="POST" action="./index.php?action=crearUsuario">
				
