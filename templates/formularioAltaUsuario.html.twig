{% include "home.html.twig" %}


	<div class="row container-fluid alMedio">
		<div class="col-sm-4"> </div>
		<div class="col-sm-4">
			{% if datos.datosUsuario is defined %}<h1 class="alMedio text-center">Modificar Usuario</h1>
			{% else %}<h1 class="alMedio text-center">Nuevo Usuario</h1>
			{% endif %}
			<br>
			{% if datos.mensaje is defined %}
				<p id="campo_error" class="{{datos.tipo_mensaje}} text-center"> {{ datos.mensaje }}</p>
			{% endif %}
				{% if datos.datosUsuario is defined %}
					<form method="POST" action="./index.php?action=modificarUsuario" onsubmit='return validarAltaUsuario()'>
						<input type="hidden" name="id_usuario" value="{{datos.datosUsuario.id}}" >
				{% else %}
					<form name="formularioAltaUsuario" method="POST" action="./index.php?action=crearUsuario" onsubmit="return validarAltaUsuario()">
				{% endif %}
				 <div class="form-group">
				 	<label for="first_name">Nombre</label>
				    <input type="text" name="first_name" class="form-control" required="" {% if datos.datosUsuario is defined %} placeholder="{{datos.datosUsuario.first_name}}" {% endif %}>
				 </div>
				 <div class="form-group">
				    <label for="last_name">Apellido</label>
				    <input type="text" name="last_name" class="form-control" required="" {% if datos.datosUsuario is defined %} placeholder="{{datos.datosUsuario.last_name}}" {% endif %}>
				 </div>
				 <div class="form-group">
				 	<label for="email">Correo electrónico</label>
				    <input type="email" name="email" class="form-control"required="" {% if datos.datosUsuario is defined %} placeholder="{{datos.datosUsuario.email}}" {% endif %}>
				 </div>
				 <div class="form-group">
				 	<label for="username">Nombre de usuario</label>
				    <input type="text" name="username" class="form-control" required="" {% if datos.datosUsuario is defined %} placeholder="{{datos.datosUsuario.username}}" {% endif %}>
				 </div>
				 <div class="form-group">
				 	<label for="password">Contraseña</label>
				    <input type="password" name="password" class="form-control"required="" {% if datos.datosUsuario is defined %} placeholder="{{datos.datosUsuario.password}}" {% endif %}>
				 </div>
				 <div class="form-group">
				 	<label for="password">Repetir contraseña</label>
				    <input type="password" name="password2" class="form-control"required="">
				 </div>
				 <div class="form-group">
				 	<button class="btn btn-outline-primary text-black btn my-2 my-sm-0 btn-lg" type="submit">¡Listo!
					</button>
				 </div>
			</form> 
		</div>
		<div class="col-sm-4"></div>
	</div>
</div>